@model HotelApp.Dtos.DisplayHotels

<p style="color: red">@ViewBag.ErrorMessage</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Hotel</th>
            <th scope="col">Action</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.HotelsNames.Count; i++)
    {
        <tr>
            <td scope="row">@(i + 1)</td>
            <td>@Html.ActionLink(@Model.HotelsNames[i], "HotelManager", "Hotels", new { hotelId = Model.HotelsIds[i] })</td>
            <td>
                @Html.ActionLink("Update", "Update", "Hotels", new { hotelId = Model.HotelsIds[i] }) |
                @Html.ActionLink("Delete", "Delete", "Hotels", new { hotelId = Model.HotelsIds[i] })
            </td>
        </tr>
    }
    </tbody>
</table>