@model HotelApp.Dtos.DisplayHotels

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Hotel</th>
        <th>Action</th>
    </tr>
    @for (int i = 0; i < Model.HotelsNames.Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@Html.ActionLink(@Model.HotelsNames[i], "Hotel", "Hotels", new { hotelId = Model.HotelsIds[i] })</td>
            <td>
                @Html.ActionLink("Update", "Update", "Hotels", new { hotelId = Model.HotelsIds[i] }) |
                @Html.ActionLink("Delete", "Delete", "Hotels", new { hotelId = Model.HotelsIds[i] })
            </td>
        </tr>
    }
</table>

